/* about.wxss */
.page-container {
  padding: 30rpx 20rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
  margin: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(93, 111, 190, 0.2);
  border-top: 6rpx solid #5D6FBE;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.company-card {
  margin-bottom: 40rpx;
}

.company-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.company-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 20rpx;
  border: 2rpx solid #5D6FBE;
}

.company-name {
  font-size: 36rpx;
  font-weight: bold;
}

.company-intro {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-top: 20rpx;
}

.vision-content {
  padding: 20rpx;
  background: rgba(93, 111, 190, 0.05);
  border-radius: 8rpx;
}

.vision-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  font-style: italic;
  text-align: center;
}

.values-list {
  padding: 10rpx 0;
}

.value-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.value-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: #5D6FBE;
  border-radius: 50%;
  margin-right: 20rpx;
}

.value-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.team-list {
  margin-bottom: 40rpx;
}

.team-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 30rpx;
  display: flex;
  align-items: flex-start;
}

.team-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
  border: 2rpx solid #5D6FBE;
}

.team-info {
  flex: 1;
}

.team-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.team-role {
  font-size: 26rpx;
  color: #D4AF37;
  margin-bottom: 15rpx;
}

.team-description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.contact-item {
  display: flex;
  margin-bottom: 16rpx;
}

.contact-label {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  width: 100rpx;
}

.contact-value {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.phone, .email, .wechat {
  color: #3A4A8C;
}

.footer {
  text-align: center;
  margin-top: 60rpx;
  padding: 30rpx 0;
}

.copyright {
  font-size: 24rpx;
  color: #999;
} 
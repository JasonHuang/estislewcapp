/* products.wxss */
.page-container {
  padding: 0 0 30rpx 0;
}

/* 分类导航 */
.categories-scroll {
  width: 100%;
  white-space: nowrap;
  background-color: #fff;
  padding: 10rpx 0;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: sticky;
  top: 0;
  z-index: 999;
}

.categories {
  display: inline-block;
  padding: 0 20rpx;
}

.category-item {
  display: inline-block;
  margin: 0 20rpx;
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  transition: all 0.3s;
}

.category-item.active {
  background: linear-gradient(to right, #5D6FBE, #3A4A8C);
  color: #fff;
  box-shadow: 0 4rpx 8rpx rgba(58, 74, 140, 0.2);
}

/* 产品列表 */
.products-list {
  padding: 20rpx;
}

.product-card {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.product-image {
  width: 100%;
  height: 400rpx;
}

.product-info {
  padding: 20rpx;
}

.product-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.product-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.product-price {
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 10rpx;
}

.product-detail-btn {
  text-align: center;
  padding: 16rpx 0;
  background: rgba(93, 111, 190, 0.1);
  color: #3A4A8C;
  font-size: 28rpx;
  border-top: 1rpx solid rgba(93, 111, 190, 0.2);
}

/* 空状态 */
.empty-tip {
  text-align: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 技术支持 */
.technical-support {
  text-align: center;
  padding: 40rpx 0 20rpx;
}

.support-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
} 
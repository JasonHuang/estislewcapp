.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 图片轮播 */
.image-swiper {
  width: 100%;
  height: 750rpx;
}

.product-image {
  width: 100%;
  height: 100%;
}

/* 产品信息 */
.product-info {
  background-color: #fff;
  padding: 30rpx;
  margin-top: 20rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.product-price {
  font-size: 40rpx;
  color: #e6b800;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.product-category {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

/* 规格信息 */
.specifications {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.spec-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.spec-item .label {
  color: #666;
  width: 120rpx;
}

.spec-item .value {
  color: #333;
  flex: 1;
}

/* 产品描述 */
.description {
  margin-bottom: 30rpx;
}

.desc-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 加载状态 */
.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #e6b800;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
} 
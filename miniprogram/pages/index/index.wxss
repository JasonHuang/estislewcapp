/**index.wxss**/
.container {
  width: 100%;
  padding: 0;
}

/* 轮播图 */
.banner {
  width: 100%;
  height: 400rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 公司标题 */
.company-title {
  text-align: center;
  font-size: 42rpx;
  font-weight: bold;
  padding: 30rpx 0;
}

/* 特色服务 */
.section {
  width: 100%;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more {
  font-size: 26rpx;
  color: #3A4A8C;
}

.features {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.feature-item {
  width: 30%;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
}

.feature-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.feature-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.feature-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 产品列表 */
.product-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.product-item {
  width: 48%;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.product-image {
  width: 100%;
  height: 300rpx;
}

.product-info {
  padding: 16rpx;
}

.product-name {
  font-size: 28rpx;
  display: block;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-price {
  font-size: 28rpx;
  font-weight: bold;
}

/* 关于部分 */
.about-section {
  background: rgba(93, 111, 190, 0.05);
  padding: 30rpx;
  border-radius: 10rpx;
  text-align: center;
}

.about-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.about-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.about-btn {
  width: 60%;
  margin-top: 20rpx;
} 
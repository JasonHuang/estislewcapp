/* goldprice.wxss */
.page-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(93, 111, 190, 0.2);
  border-top: 6rpx solid #5D6FBE;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 选项卡 */
.tabs {
  display: flex;
  background-color: #fff;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  position: sticky;
  top: 0;
  z-index: 999;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #3A4A8C;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(to right, #5D6FBE, #3A4A8C);
  border-radius: 3rpx;
}

/* 内容区 */
.tab-content {
  padding: 30rpx 20rpx;
}

/* 价格卡片 */
.price-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.price-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  font-size: 26rpx;
  color: #3A4A8C;
  background: rgba(93, 111, 190, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.price-main {
  text-align: center;
  margin: 40rpx 0;
}

.price-value {
  margin-bottom: 10rpx;
}

.price-number {
  font-size: 72rpx;
  font-weight: bold;
}

.price-unit {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.price-change {
  font-size: 28rpx;
}

.price-change.up {
  color: #f43f5e;
}

.price-change.down {
  color: #10b981;
}

.price-change.stable {
  color: #6b7280;
}

.change-percent {
  margin-left: 10rpx;
}

.price-footer {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #999;
}

.notification {
  color: #3A4A8C;
}

/* 每日价格列表 */
.daily-price {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.daily-list {
  margin-top: 20rpx;
}

.daily-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.daily-item:last-child {
  border-bottom: none;
}

.daily-date {
  font-size: 28rpx;
  color: #666;
}

.daily-price-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 图表卡片 */
.chart-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.chart-container {
  height: 500rpx;
  position: relative;
}

.chart-placeholder {
  width: 100%;
  height: 400rpx;
  border-bottom: 2rpx solid #eee;
  position: relative;
}

.chart-line {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
}

.chart-point {
  width: 20rpx;
  height: 20rpx;
  background: #5D6FBE;
  border-radius: 50%;
  position: absolute;
  transform: translateX(-50%);
  bottom: 0;
}

.chart-dates {
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}

.chart-date {
  font-size: 24rpx;
  color: #999;
  width: 14.28%;
  text-align: center;
}

.chart-note {
  font-size: 24rpx;
  color: #999;
  margin-top: 20rpx;
  text-align: center;
}

/* 饰品金价 */
.jewelry-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.jewelry-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.jewelry-title {
  font-size: 32rpx;
  font-weight: bold;
}

.jewelry-note {
  font-size: 24rpx;
  color: #999;
}

.jewelry-list {
  margin: 30rpx 0;
}

.jewelry-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.jewelry-item:last-child {
  border-bottom: none;
}

.jewelry-type {
  font-size: 28rpx;
  color: #333;
}

.jewelry-price {
  font-size: 32rpx;
  font-weight: bold;
}

.jewelry-tip {
  display: flex;
  align-items: center;
  background: rgba(93, 111, 190, 0.05);
  padding: 20rpx;
  border-radius: 8rpx;
}

.tip-icon {
  width: 30rpx;
  height: 30rpx;
  background: #3A4A8C;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 30rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 计算器入口 */
.calculator-entry {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.calculator-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.calculator-btn {
  display: inline-block;
  background: linear-gradient(to right, #5D6FBE, #3A4A8C);
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 60rpx;
  border-radius: 30rpx;
} 